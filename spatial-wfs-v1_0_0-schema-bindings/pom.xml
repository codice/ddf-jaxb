<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ddf.jaxb</groupId>
        <artifactId>ddf-jaxb-reactor</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>spatial-wfs-v1_0_0-schema-bindings</artifactId>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <executions>
                    <execution>
                        <id>wfs-basic-generate</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <extension>true</extension>
                            <forceRegenerate>true</forceRegenerate>
                            <schemaDirectory>
                                src/main/resources
                            </schemaDirectory>
                            <schemaIncludes>
                                <include>wfs/1.0.0/WFS-basic.xsd</include>
                            </schemaIncludes>
                            <bindingDirectory>
                                src/main/bindings
                            </bindingDirectory>
                            <bindingIncludes>
                                <include>wfs-basic-binding.xjb</include>
                            </bindingIncludes>
                            <args>
                                <arg>-Xannotate</arg>
                                <arg>-Xvisitor</arg>
                                <arg>-Xvisitor-package:ogc.schema.opengis</arg>
                            </args>
                            <plugins>
                                <plugin>
                                    <groupId>org.jvnet.jaxb2_commons</groupId>
                                    <artifactId>jaxb2-basics-annotate</artifactId>
                                    <version>0.6.0</version>
                                </plugin>
                                <plugin>
                                    <groupId>com.massfords</groupId>
                                    <artifactId>jaxb-visitor</artifactId>
                                    <version>1.13</version>
                                </plugin>
                            </plugins>
                        </configuration>
                    </execution>
                    <execution>
                        <id>wfs-capabilties-generate</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <extension>true</extension>
                            <forceRegenerate>true</forceRegenerate>
                            <schemaDirectory>
                                src/main/resources
                            </schemaDirectory>
                            <schemaIncludes>
                                <include>wfs/1.0.0/WFS-capabilities.xsd</include>
                            </schemaIncludes>
                            <bindingDirectory>
                                src/main/bindings
                            </bindingDirectory>
                            <bindingIncludes>
                                <include>wfs-capabilities-binding.xjb</include>
                            </bindingIncludes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>ogc-exception-generate</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <extension>true</extension>
                            <forceRegenerate>true</forceRegenerate>
                            <schemaDirectory>
                                src/main/resources
                            </schemaDirectory>
                            <schemaIncludes>
                                <include>wfs/1.0.0/OGC-exception.xsd</include>
                            </schemaIncludes>
                            <bindingDirectory>
                                src/main/bindings
                            </bindingDirectory>
                            <bindingIncludes>
                                <include>ogc-exception-binding.xjb</include>
                            </bindingIncludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>